{
  "name": "multiclip",
  "version": "1.0.4",
  "description": "macOS用クリップボード履歴管理アプリ",
  "author": "kopo-k",
  "license": "MIT",
  "main": "dist/main/index.js",
  "scripts": {
    "vite": "vite",
    "vite:build": "vite build",
    "start": "npm run build && electron .",
    "build": "tsc && cp -R public dist/public && npm run vite:build",
    "rebuild": "electron-rebuild",
    "dev": "tsc --watch",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "release": "npm run build && electron-builder --mac --win --publish=always",
    "release:local": "npm run build && npm run dist",
    "release:manual": "npm run release:local && echo 'Files ready in release/ folder. Upload manually to GitHub.'"
  },
  "build": {
    "appId": "com.multiclip.app",
    "productName": "MultiClip",
    "directories": {
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "kopo-k",
      "repo": "MultiClip"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/icon.icns",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "files": [
      "dist/**/*",
      "public/**/*",
      "!node_modules/**/*",
      "node_modules/better-sqlite3/**/*",
      "node_modules/bindings/**/*",
      "node_modules/file-uri-to-path/**/*"
    ],
    "extraResources": [
      "node_modules/better-sqlite3/build/**/*"
    ],
    "compression": "maximum"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "better-sqlite3": "^12.2.0",
    "bindings": "^1.5.0",
    "file-uri-to-path": "^2.0.0",
    "node-gyp-build": "^4.8.0",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "robotjs": "^0.6.0"
  }
}
